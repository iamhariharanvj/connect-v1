import mongoose from "mongoose"

const doubtSchema = new mongoose.Schema({
    id:{
        default: this._id
    },
    question: {
        type: "string",
        required: true,
    },
    answer: {
        type: "string",
        
    },
    status: {
        type: "string",
        default: "Unsolved"
    },
    solvedBy: {
        default: null
    }

});

const doubtModel = mongoose.Model("doubts",doubtSchema);

export {doubtSchema}
export default doubtModel;